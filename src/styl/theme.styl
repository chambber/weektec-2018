.reveal
  .logo
    height 79px
    width 80px
  h1
    font-size 3.5em
    line-height 0.9em
  .main-links
      font-size 0.8em
  .align-left
      text-align left
  hr
      border 1px dashed rgba(255,255,255, 0.3)
  > .backgrounds
      background #000

  .list-none
      list-style: none
      font-size: 30px
  .main-item
      color: #05C51D
      font-weight: bold
      padding-bottom: 15px
  .list-itens
      list-style none
      margin-top 80px
      li
          display: inline-block
          text-align: center
          border 1px dashed #ccc
          width 25%
          height 178px
          vertical-align middle
          padding 2%
          margin 1%

  .highlight-item
      color #ffd817
  section img
      border none
      background transparent
  .non-style
      list-style: none
      margin 0
  .bigger-link
      font-size: 55px
  .space-top
      margin-top: 80px
  .col
      margin-top: 60px
      display: inline-block
      float: left
  .col-70
      width 70%
  .col-33
      width 33%
  .col-30
      width 30%
  .move-left-minor
      padding-left 5%
  .move-left
      padding-left 90px
  pre
      width 100% !important
  code
      font-size 27px
      line-height 40px
      padding 30px !important
  .case-video,
  .link-case,
  .bottom
    position: absolute
    bottom: 0
  .case-video
    height 100%
    width 100%
  .link-case
      right: -150px
      font-size: 3rem
      color: #fff
      text-align: center
      text-shadow: 2px 2px 6px #000
      background: #000
      padding: 5px 10px
      line-height: 3rem
      right: 0
      &.top
          position: relative
          top: 0
          bottom: none
          font-size: 2rem

  img
      border: none
      box-shadow: none !important
  #meter
      width: 500px
      height: 100px
  .slide-white
      background: #fff !important
      color: #000 !important
  .line-height-better
      line-height: 4rem
      text-transform: none
      font-size: 3rem
  .minor-font
      font-size: 1.8rem
      margin-top: 45px
  .span-black
      background: #000
      padding: 20px 25px
      color: #fff
      width: 300px
      margin: auto
      letter-spacing: 4px
  .slides > .title-video
    height 600px

pre.prettyprint
    border: none !important
pre .pln
  color:#fffdeb
pre .str
  color:#aaee22
pre .kwd
  color:#ff0077
pre .com
  color:#727879
pre .typ
  color:#fff
pre .lit
  color:#ffb412
pre .pun,.opn,.clo
  color:#04dbe5
pre .tag
  color:#04dbe5
pre .atn
  color:#606
pre .atv
  color:#080
pre .dec,.var
  color:red
pre .fun
  color:red

